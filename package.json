{
  "name": "portfolio-platform",
  "version": "1.0.0",
  "description": "Future-proof, fully dynamic backend developer portfolio CMS",
  "private": true,
  "workspaces": [
    "apps/*",
    "server",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\" \"npm run dev:admin\"",
    "dev:server": "npm run dev --workspace=server",
    "dev:client": "npm run dev --workspace=client",
    "dev:admin": "npm run dev --workspace=admin",
    "build": "npm run build --workspaces",
    "build:server": "npm run build --workspace=server",
    "build:client": "npm run build --workspace=client",
    "build:admin": "npm run build --workspace=admin",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build"
  },
  "keywords": [
    "portfolio",
    "cms",
    "backend",
    "fullstack"
  ],
  "author": "Nigmanand Das",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "react-helmet-async": "^2.0.5"
  }
}
